<UserControl
    x:Class="IRExplorer.Panels.DocumentSearchPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:doc="clr-namespace:IRExplorer.Document"
    xmlns:irexplorer="clr-namespace:IRExplorer"
    xmlns:local="clr-namespace:IRExplorer.Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
        BorderThickness="2,1,2,2">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <doc:SearchPanel x:Name="SearchPanel" Height="28" />
                <StackPanel Margin="4,4,4,4" Orientation="Horizontal">
                    <CheckBox Content="Search entire document" />
                    <CheckBox Margin="8,0,0,0" Content="Include pass output" />
                </StackPanel>
                <Separator />
                <StackPanel Margin="4,4,4,4" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Functions" />
                        <TextBlock
                            Width="50"
                            Margin="4,0,0,0"
                            Text="{Binding FunctionCount}" />
                    </StackPanel>
                    <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="Sections" />
                        <TextBlock
                            Width="50"
                            Margin="4,0,0,0"
                            Text="{Binding SectionCount}" />
                    </StackPanel>
                    <StackPanel Margin="16,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="Total Results" />
                        <TextBlock
                            Width="50"
                            Margin="4,0,0,0"
                            Text="{Binding InstanceCount}" />
                    </StackPanel>
                    <StackPanel Margin="4,0,0,0" Orientation="Horizontal">
                        <TextBlock Text="Duration" />
                        <TextBlock
                            Width="50"
                            Margin="4,0,0,0"
                            Text="{Binding Duration}" />
                    </StackPanel>
                </StackPanel>

                <Separator />

            </StackPanel>
            <irexplorer:SearchResultsPanel x:Name="ResultsPanel" DockPanel.Dock="Bottom" />
        </DockPanel>
    </Border>
</UserControl>
