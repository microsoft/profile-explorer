<local:OptionsPanelBase
    x:Class="IRExplorer.Sharing.SessionSharingPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorer.OptionsPanels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="60"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="4,4,4,4" Orientation="Vertical">
            <TextBlock Text="Sharing link" />
            <TextBox
                x:Name="SharingLinkTextBox"
                Margin="0,4,0,0"
                IsReadOnly="True"
                Text="{Binding SharingLink}" />
        </StackPanel>
    </Grid>
</local:OptionsPanelBase>
