            </Grid>
            <Grid Margin="0,2,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <toolkit:ColorPicker
                Grid.Column="0"
                Width="64"
