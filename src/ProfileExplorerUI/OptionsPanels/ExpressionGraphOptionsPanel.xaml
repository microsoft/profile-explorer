<UserControl
  x:Class="ProfileExplorer.UI.OptionsPanels.ExpressionGraphOptionsPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ProfileExplorer.UI.OptionsPanels"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=DotNetProjects.Wpf.Extended.Toolkit"
  d:DesignHeight="600"
  d:DesignWidth="400              "
  mc:Ignorable="d">
  <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <TabControl
      Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
      BorderThickness="0">
      <TabItem
        Header="General"
        Style="{StaticResource TabControlStyle}">
        <StackPanel Margin="4,4,4,4">
          <TextBlock
            FontWeight="Medium"
            Text="Graph Content" />
          <StackPanel
            Margin="0,0,0,2"
            Orientation="Horizontal" />
          <CheckBox
            Margin="0,4,0,2"
            Content="Show variable names"
            IsChecked="{Binding Path=PrintVariableNames_, Mode=TwoWay}"
            ToolTip="Show the destination variable name for each instruction" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Show variable SSA definition numbers"
            IsChecked="{Binding Path=PrintSSANumbers_, Mode=TwoWay}"
            ToolTip="Show the SSA definition numbers for instructions and other operands" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Skip over copy instructions"
            IsChecked="{Binding Path=SkipCopyInstructions_, Mode=TwoWay}"
            ToolTip="Don't include in the graph instructions that only copy values" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Group instructions by basic block"
            IsChecked="{Binding Path=GroupInstructions_, Mode=TwoWay}" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Show expression bottom-up"
            IsChecked="{Binding Path=PrintBottomUp_, Mode=TwoWay}"
            ToolTip="Show the expression inverted, with the start point placed up and the leaf operands placed down" />
          <TextBlock
            Margin="0,6,0,2"
            Text="Maximum expression depth" />
          <StackPanel
            Margin="0,0,0,4"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <Slider
              Width="150"
              AutoToolTipPlacement="TopLeft"
              Foreground="{DynamicResource DisabledForegroundBrush}"
              Maximum="32"
              Minimum="1"
              TickFrequency="2"
              TickPlacement="BottomRight"
              ToolTip="The maximum depth of the expression tree to show in the graph"
              Value="{Binding Path=MaxExpressionDepth_, Mode=TwoWay}" />
            <TextBlock
              Margin="8,0,0,0"
              Text="{Binding Path=MaxExpressionDepth}" />
            <TextBlock
              Margin="4,0,0,0"
              Text="instructions" />
          </StackPanel>
          <Separator
            Margin="0,4,0,4"
            Background="LightGray" />

          <TextBlock
            FontWeight="Medium"
            Text="Graph Interaction" />

          <CheckBox
            Margin="0,4,0,2"
            Content="Bring selected node into view"
            IsChecked="{Binding Path=BringNodesIntoView_, Mode=TwoWay}"
            ToolTip="Scroll the graph to show the node corresponding to the selected line in the associated document" />

          <CheckBox
            x:Name="ShowPreviewCheckbox"
            Margin="0,2,0,2"
            Content="Show node preview popup on hover"
            IsChecked="{Binding Path=ShowPreviewPopup_, Mode=TwoWay}"
            ToolTip="Show a preview of the corresponding lines from the associated document" />
          <CheckBox
            Margin="20,3,0,2"
            Content="Only when a modifier key is pressed (Shift/Ctrl/Alt)"
            IsChecked="{Binding Path=ShowPreviewPopupWithModifier_, Mode=TwoWay}"
            IsEnabled="{Binding ElementName=ShowPreviewCheckbox, Path=IsChecked}" />
        </StackPanel>
      </TabItem>

      <TabItem
        Header="Appearance"
        Style="{StaticResource TabControlStyle}">
        <StackPanel Margin="4,4,4,4">
          <TextBlock
            FontWeight="Medium"
            Text="Graph Node Style" />
          <CheckBox
            Margin="0,4,0,2"
            Content="Use semantic colorization for nodes"
            IsChecked="{Binding Path=ColorizeNodes_, Mode=TwoWay}" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Use semantic colorization for edges"
            IsChecked="{Binding Path=ColorizeEdges_, Mode=TwoWay}" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Highlight connected nodes on hover"
            IsChecked="{Binding Path=HighlightConnectedNodesOnHover_, Mode=TwoWay}" />
          <CheckBox
            Margin="0,2,0,2"
            Content="Highlight connected nodes on selection"
            IsChecked="{Binding Path=HighlightConnectedNodesOnSelection_, Mode=TwoWay}" />
          <Separator
            Margin="0,4,0,4"
            Background="LightGray" />

          <TextBlock
            FontWeight="Medium"
            Text="Graph Colors" />
          <StackPanel
            Margin="0,4,0,0"
            Orientation="Vertical">

            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <toolkit:ColorPicker
                Grid.Column="0"
                Width="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                AvailableColorsSortingMode="HueSaturationBrightness"
                BorderBrush="#707070"
                SelectedColor="{Binding Path=TextColor_, Mode=TwoWay}"
                ShowDropDownButton="True" />
              <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Text color" />
            </Grid>

            <Grid Margin="0,2,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <toolkit:ColorPicker
                Grid.Column="0"
                Width="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                AvailableColorsSortingMode="HueSaturationBrightness"
                BorderBrush="#707070"
                SelectedColor="{Binding Path=BackgroundColor_, Mode=TwoWay}"
                ShowDropDownButton="True" />
              <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Background color" />
            </Grid>

            <Grid Margin="0,2,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <toolkit:ColorPicker
                Grid.Column="0"
                Width="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                AvailableColorsSortingMode="HueSaturationBrightness"
                BorderBrush="#707070"
                SelectedColor="{Binding Path=NodeColor_, Mode=TwoWay}"
                ShowDropDownButton="True" />
              <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Node color" />
            </Grid>
            <Grid Margin="0,2,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <toolkit:ColorPicker
                Grid.Column="0"
                Width="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                AvailableColorsSortingMode="HueSaturationBrightness"
                BorderBrush="#707070"
                SelectedColor="{Binding Path=SelectedNodeColor_, Mode=TwoWay}"
                ShowDropDownButton="True" />
              <TextBlock
                Grid.Column="1"
