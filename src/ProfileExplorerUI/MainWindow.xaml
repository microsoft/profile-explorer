                VerticalAlignment="Center"
                FontWeight="SemiBold"
                Foreground="Indigo"
                Text="Threads:"
                Visibility="{Binding HasThreadFilter, Converter={StaticResource BoolToVisibilityConverter}}" />
              <TextBlock
