<UserControl
    x:Class="IRExplorerUI.Document.ActionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI.Document"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border
        Width="40"
        Height="22"
        BorderBrush="DimGray"
        BorderThickness="1,1,1,1">
        <Button
            x:Name="RemarkPanelButton"
            Width="Auto"
            Height="Auto"
            Padding="2,2,2,2"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Background="#FFFFFBCF"
            BorderBrush="{x:Null}"
            Visibility="{Binding ShowRemarksButton, Converter={StaticResource BoolToVisibility}}">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="14"
                    Height="14"
                    Margin="0,0,2,0"
                    Source="{StaticResource RemarkIcon}" />
                <Image
                    Width="16"
                    Height="16"
                    Margin="0,-1,0,0"
                    Source="{StaticResource DownArrowIcon}" />
            </StackPanel>
        </Button>


    </Border>
</UserControl>
