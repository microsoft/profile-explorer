<irExplorerUi:ToolPanelControl x:Class="IRExplorerUI.Profile.FlameGraphPanel"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:IRExplorerUI.Profile"
                  xmlns:irExplorerUi="clr-namespace:IRExplorerUI"
                  mc:Ignorable="d"
                  d:DesignHeight="300" d:DesignWidth="300">
    <irExplorerUi:ToolPanelControl.CommandBindings>
        <CommandBinding Command="irExplorerUi:GraphCommand.GraphFitWidth" Executed="ExecuteGraphFitWidth" />
        <CommandBinding Command="irExplorerUi:GraphCommand.GraphResetWidth" Executed="ExecuteGraphResetWidth" />
        <CommandBinding Command="irExplorerUi:GraphCommand.GraphFitAll" Executed="ExecuteGraphFitAll" />
        <CommandBinding Command="irExplorerUi:GraphCommand.GraphZoomIn" Executed="ExecuteGraphZoomIn" />
        <CommandBinding Command="irExplorerUi:GraphCommand.GraphZoomOut" Executed="ExecuteGraphZoomOut" />
    </irExplorerUi:ToolPanelControl.CommandBindings>

    <irExplorerUi:ToolPanelControl.InputBindings>
        <KeyBinding
            Key="W"
            Command="irExplorerUi:GraphCommand.GraphFitWidth"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="R"
            Command="irExplorerUi:GraphCommand.GraphResetWidth"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="A"
            Command="irExplorerUi:GraphCommand.GraphFitAll"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="M"
            Command="irExplorerUi:GraphCommand.MarkBlock"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="M"
            Command="irExplorerUi:GraphCommand.MarkGroup"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Shift+Ctrl" />
        <KeyBinding
            Key="P"
            Command="irExplorerUi:GraphCommand.MarkPredecessors"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="S"
            Command="irExplorerUi:GraphCommand.MarkSuccessors"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="L"
            Command="irExplorerUi:GraphCommand.MarkLoop"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="L"
            Command="irExplorerUi:GraphCommand.MarkLoopNest"
            CommandTarget="{Binding ElementName=GraphHost}"
            Modifiers="Shift+Ctrl" />
    </irExplorerUi:ToolPanelControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <Grid
            x:Name="ToolbarHost"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>
            <ToolBarTray
                Grid.Column="0"
                Height="28"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                DockPanel.Dock="Left"
                IsLocked="True">
                <ToolBar
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                    Loaded="ToolBar_Loaded">
                    <Button
                        Margin="4,0,0,0"
                        Command="irExplorerUi:GraphCommand.GraphZoomOut"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        ToolTip="Zoom Out (Ctrol+_">
                        <Image Source="{StaticResource MinusIcon}" />
                    </Button>
                    <Button
                        Command="irExplorerUi:GraphCommand.GraphZoomIn"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        ToolTip="Zoom In (Ctrl+=)">
                        <Image Source="{StaticResource PlusIcon}" />
                    </Button>
                    <Separator />
                    <Button
                        Margin="4,0,0,0"
                        Command="irExplorerUi:GraphCommand.GraphFitWidth"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        ToolTip="Zoom the view to fit the graph horizontally (Ctrl+W)">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource FitWidthIcon}" />
                            <TextBlock Margin="4,0,0,0" Text="Fit Width" />
                        </StackPanel>
                    </Button>
                    <Button
                        Command="irExplorerUi:GraphCommand.GraphFitAll"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        ToolTip="Zoom the view to show the entire graph (Ctrl+A)">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource FitAllIcon}" />
                            <TextBlock Margin="4,0,0,0" Text="Fit All" />
                        </StackPanel>
                    </Button>
                    <Button
                        Command="irExplorerUi:GraphCommand.GraphResetWidth"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        ToolTip="Zoom the graph view to 100% (Ctrl+R)">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{StaticResource ResetWidthIcon}" />
                            <TextBlock Margin="4,0,0,0" Text="Reset" />
                        </StackPanel>
                    </Button>
                    <Separator />
                    <Menu VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
                        <MenuItem
                            Padding="0,2,2,2"
                            Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                            Header="Clear"
                            OverridesDefaultStyle="True">
                            <MenuItem.Icon>
                                <Image
                                    Width="16"
                                    Height="16"
                                    Source="{StaticResource RemoveIcon}" />
                            </MenuItem.Icon>
                            <MenuItem
                                Command="irExplorerUi:GraphCommand.ClearMarked"
                                CommandTarget="{Binding ElementName=GraphHost}"
                                Header="Selected Marker" />
                            <MenuItem
                                Command="irExplorerUi:GraphCommand.ClearAllMarked"
                                CommandTarget="{Binding ElementName=GraphHost}"
                                Header="All Markers" />
                        </MenuItem>
                    </Menu>
                    <Separator />
                    <Button
                        Command="irExplorerUi:GraphCommand.GraphZoomIn"
                        CommandTarget="{Binding ElementName=GraphHost}"
                        IsEnabled="False"
                        ToolTip="Search graph node text (Ctrl+F)">
                        <Image Source="{StaticResource SearchIcon}" />
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <irExplorerUi:PanelToolbarTray
                Grid.Column="1"
                HasPinButton="False"
                HasDuplicateButton="False"
                MaxWidth="75"
                DockPanel.Dock="Right"
                SettingsClicked="PanelToolbarTray_SettingsClicked" />
        </Grid>


        <irExplorerUi:ScrollViewerClickable
            x:Name="GraphHost"
            Grid.Row="1"
            Background="#EFECE2"
            ScrollChanged="GraphHost_OnScrollChanged"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <local:FlameGraphViewer x:Name="GraphViewer" ContextMenu="{StaticResource GraphContextMenu}" />
        </irExplorerUi:ScrollViewerClickable>

    </Grid>
</irExplorerUi:ToolPanelControl>