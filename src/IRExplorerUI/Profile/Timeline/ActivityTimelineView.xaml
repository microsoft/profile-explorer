<UserControl
    x:Class="IRExplorerUI.Profile.ActivityTimelineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI.Profile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="0,1,0,0">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid
                Width="100"
                Height="32"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="PapayaWhip">
                <Image
                    Width="16"
                    Height="16"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{StaticResource QueryIcon}" />
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Top"
                    FontWeight="Medium"
                    Text="{Binding Path=ThreadId, ElementName=ActivityHost}"
                    ToolTip="Thread number" />
                <TextBlock
                    MaxWidth="100"
                    Margin="4,16,0,0"
                    HorizontalAlignment="Left"
                    FontSize="11"
                    Text="{Binding ThreadName, ElementName=ActivityHost, Converter={StaticResource PercentageConverter}}"
                    TextTrimming="CharacterEllipsis"
                    ToolTip="{Binding ThreadName, ElementName=ActivityHost, Converter={StaticResource PercentageConverter}}" />
            </Grid>
            <local:ActivityView
                x:Name="ActivityHost"
                Height="32"
                Margin="100,0,0,0"
                VerticalAlignment="Top" />
            <local:FlameGraphViewer
                x:Name="TimelineViewer"
                MaxHeight="300"
                Margin="100,32,0,0"
                VerticalAlignment="Stretch"
                Visibility="Collapsed" />
        </Grid>
    </Border>
</UserControl>
