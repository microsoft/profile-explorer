<UserControl
  x:Class="IRExplorerUI.Profile.Document.ProfileIRDocument"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:document="clr-namespace:IRExplorerUI.Document"
  xmlns:irExplorerUi="clr-namespace:IRExplorerUI"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="300"
  d:DesignWidth="500"
  mc:Ignorable="d">
  <UserControl.Resources>
    <Style x:Key="ColumnsGridSplitterStyle" TargetType="{x:Type ColumnDefinition}">
      <Style.Setters>
        <Setter Property="Width" Value="2" />
      </Style.Setters>
      <Style.Triggers>
        <DataTrigger Binding="{Binding ColumnsVisible}" Value="False">
          <DataTrigger.Setters>
            <Setter Property="Width" Value="0" />
            <Setter Property="MaxWidth" Value="0" />
          </DataTrigger.Setters>
        </DataTrigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="ColumnsStyle" TargetType="{x:Type ColumnDefinition}">
      <Style.Setters>
        <Setter Property="Width" Value="*" />
      </Style.Setters>
      <Style.Triggers>
        <DataTrigger Binding="{Binding ColumnsVisible}" Value="False">
          <DataTrigger.Setters>
            <Setter Property="Width" Value="0" />
          </DataTrigger.Setters>
        </DataTrigger>

        <DataTrigger Binding="{Binding UseCompactMode}" Value="True">
          <DataTrigger.Setters>
            <Setter Property="Width" Value="100" />
          </DataTrigger.Setters>
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>
  <UserControl.CommandBindings>
    <CommandBinding Command="irExplorerUi:DocumentHostCommand.JumpToProfiledElement" Executed="JumpToProfiledElementExecuted" />
    <CommandBinding
      CanExecute="JumpToNextProfiledElementCanExecute"
      Command="irExplorerUi:DocumentHostCommand.JumpToNextProfiledElement"
      Executed="JumpToNextProfiledElementExecuted" />
    <CommandBinding
      CanExecute="JumpToPreviousProfiledElementCanExecute"
      Command="irExplorerUi:DocumentHostCommand.JumpToPreviousProfiledElement"
      Executed="JumpToPreviousProfiledElementExecuted" />
    <CommandBinding Command="irExplorerUi:DocumentHostCommand.ExportFunctionProfile" Executed="ExportFunctionProfileExecuted" />
  </UserControl.CommandBindings>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Style="{StaticResource ColumnsGridSplitterStyle}" />
      <ColumnDefinition Style="{StaticResource ColumnsStyle}" />
    </Grid.ColumnDefinitions>

    <DockPanel Grid.Column="0" LastChildFill="True">
      <Border
        Height="23"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Top"
        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
        BorderThickness="0,1,0,1"
        DockPanel.Dock="Top"
        Visibility="{Binding ColumnsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
        <ToolBarTray
          x:Name="ProfileToolbar"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
          IsLocked="True">
          <ToolBar
            Height="22"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"
            Loaded="ToolBar_Loaded">
            <TextBlock VerticalAlignment="Center" Text="Profile" />
            <Button
              Margin="4,0,0,0"
              Padding="0"
              VerticalAlignment="Center"
              Command="irExplorerUi:DocumentHostCommand.JumpToProfiledElement"
              CommandTarget="{Binding ElementName=TextView}"
              ToolTip="Jump to hottest profiled line"
              Visibility="{Binding ProfileVisible, Converter={StaticResource BoolToVisibilityConverter}}">
              <Image Source="{StaticResource HotFlameIcon}" Style="{StaticResource DisabledImageStyle}" />
            </Button>
            <Button
              Margin="2,0,0,0"
              Padding="0"
              Command="irExplorerUi:DocumentHostCommand.JumpToPreviousProfiledElement"
              CommandTarget="{Binding ElementName=TextView}"
              ToolTip="Jump to previous less hot line (Shift+F2)">
              <Image Source="{StaticResource MinusIcon}" Style="{StaticResource DisabledImageStyle}" />
            </Button>
            <Button
              Padding="0"
              Command="irExplorerUi:DocumentHostCommand.JumpToNextProfiledElement"
              CommandTarget="{Binding ElementName=TextView}"
              ToolTip="Jump to next hotter line (Shift+F2)">
              <Image Source="{StaticResource PlusIcon}" Style="{StaticResource DisabledImageStyle}" />
            </Button>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />

            <Button
              Padding="0"
              Command="irExplorerUi:DocumentHostCommand.ExportFunctionProfile"
              CommandTarget="{Binding ElementName=TextView}"
              ToolTip="Export profiling results as an Excel sheet">
              <StackPanel Orientation="Horizontal">
                <Image
                  Width="15"
                  Height="15"
                  Margin="0,0,2,0"
                  Source="{StaticResource ExcelIcon}"
                  Style="{StaticResource DisabledImageStyle}" />
                <TextBlock Text="Export" />
              </StackPanel>
            </Button>
            <Separator />

            <Menu Margin="2,0,0,0" VerticalAlignment="Center">
              <MenuItem
                x:Name="ProfileViewMenu"
                Margin="0,0,0,0"
                Padding="0,0,0,0"
                OverridesDefaultStyle="True">
                <MenuItem.Header>
                  <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource EyeIcon}" Style="{StaticResource DisabledImageStyle}" />
                    <TextBlock
                      Margin="4,0,0,0"
                      VerticalAlignment="Bottom"
                      Text="View" />
                    <Path
                      Margin="4,2,0,0"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 3 3 L 6 0 Z"
                      Fill="Black" />
                  </StackPanel>
                </MenuItem.Header>
                <MenuItem
                  Checked="ViewMenuItem_OnCheckedChanged"
                  Header="Show performance counters"
                  IsCheckable="True"
                  IsChecked="{Binding ShowPerformanceCounterColumns}"
                  Style="{DynamicResource SubMenuItemHeaderStyle}"
                  Unchecked="ViewMenuItem_OnCheckedChanged" />
                <MenuItem
                  Checked="ViewMenuItem_OnCheckedChanged"
                  Header="Show performance metrics"
                  IsCheckable="True"
                  IsChecked="{Binding ShowPerformanceMetricColumns}"
                  Style="{DynamicResource SubMenuItemHeaderStyle}"
                  Unchecked="ViewMenuItem_OnCheckedChanged" />
                <MenuItem
                  Checked="ViewMenuItem_OnCheckedChanged"
                  Header="Hide empty columns"
                  IsCheckable="True"
                  IsChecked="{Binding RemoveEmptyColumns}"
                  Style="{DynamicResource SubMenuItemHeaderStyle}"
                  Unchecked="ViewMenuItem_OnCheckedChanged" />
              </MenuItem>
            </Menu>
            <Menu Margin="2,0,0,0" VerticalAlignment="Center">
              <MenuItem
                x:Name="ProfileColumnsMenu"
                Margin="0,0,0,0"
                Padding="0,0,0,0"
                OverridesDefaultStyle="True">
                <MenuItem.Header>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock
                      Margin="4,0,0,0"
                      VerticalAlignment="Bottom"
                      Text="Columns" />
                    <Path
                      Margin="4,2,0,0"
                      VerticalAlignment="Center"
                      Data="M 0 0 L 3 3 L 6 0 Z"
                      Fill="Black" />
                  </StackPanel>
                </MenuItem.Header>
              </MenuItem>
            </Menu>
          </ToolBar>
        </ToolBarTray>
      </Border>

      <irExplorerUi:IRDocument
        x:Name="TextView"
        Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
        DockPanel.Dock="Bottom"
        FontFamily="Consolas"
        FontSize="12"
        HorizontalScrollBarVisibility="Auto"
        ShowLineNumbers="True"
        SyntaxHighlighting="C++"
        VerticalScrollBarVisibility="Auto" />
    </DockPanel>

    <GridSplitter
      Grid.Column="1"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
      ResizeBehavior="PreviousAndNext" />

    <document:DocumentColumns
      x:Name="ProfileColumns"
      Grid.Column="2"
      Padding="-1,0,0,0"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch" />
  </Grid>
</UserControl>