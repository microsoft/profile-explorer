<UserControl
    x:Class="IRExplorerUI.Panels.StartPagePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI.Panels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Border
        Background="{DynamicResource WindowBackgroundBrush}"
        BorderBrush="{DynamicResource SeparatorBrush}"
        BorderThickness="1,1,1,1">
        <DockPanel LastChildFill="True">

            <DockPanel Background="{DynamicResource AccentBackgroundBrush2}" DockPanel.Dock="Top">
                <Border Padding="10,10,10,10">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="32"
                            Height="32"
                            Source="{StaticResource LogoImage}" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Normal"
                            Text="IR Explorer" />

                    </StackPanel>
                </Border>
                <Border Padding="10,10,10,10" DockPanel.Dock="Right">
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontSize="14"
                            MouseDown="TextBlock_MouseDown_1"
                            Text="Documentation">
                            <TextBlock.TextDecorations>
                                <TextDecoration />
                            </TextBlock.TextDecorations>
                        </TextBlock>
                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            DockPanel.Dock="Right"
                            FontSize="14"
                            MouseDown="TextBlock_MouseDown"
                            Text="Visual Studio extension">
                            <TextBlock.TextDecorations>
                                <TextDecoration />
                            </TextBlock.TextDecorations>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </DockPanel>

            <ScrollViewer
                Margin="10,12,10,10"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Top" Orientation="Vertical">
                    <DockPanel>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="Recent files" />

                        <StackPanel
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                            <Button
                                Name="ClearButton"
                                Width="24"
                                Height="24"
                                Margin="0,0,2,0"
                                Padding="2,2,2,2"
                                Click="ClearButton_Click"
                                ToolTip="Clear list of recent files">
                                <Image Source="{DynamicResource RemoveIcon}" UseLayoutRounding="True" />
                            </Button>
                            <Button
                                x:Name="OpenButton"
                                Height="24"
                                Margin="2,0,0,0"
                                Padding="6,1,6,1"
                                HorizontalAlignment="Right"
                                Click="OpenFileButton_Click"
                                Content="Open File"
                                TabIndex="5" />

                        </StackPanel>
                    </DockPanel>
                    <ListBox
                        Name="RecentFilesListBox"
                        Margin="0,8,0,0"
                        FontSize="12"
                        KeyDown="RecentFilesListBox_KeyDown"
                        MouseDoubleClick="RecentFilesListBox_MouseDoubleClick" />

                    <DockPanel Margin="0,16,0,0" LastChildFill="False">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="Recent compared base/diff files" />
                        <StackPanel
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                            <Button
                                Name="ClearDiffButton"
                                Width="24"
                                Height="24"
                                Margin="0,0,2,0"
                                Padding="2,2,2,2"
                                Click="ClearDiffButton_Click"
                                ToolTip="Clear list of recent compared files">
                                <Image Source="{DynamicResource RemoveIcon}" UseLayoutRounding="True" />
                            </Button>
                            <Button
                                x:Name="OpenBaseDiffFilesButton"
                                Height="24"
                                Margin="2,0,0,0"
                                Padding="6,1,6,1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="OpenBaseDiffFilesButton_Click"
                                Content="Compare Base/Diff Files"
                                TabIndex="5" />
                        </StackPanel>
                    </DockPanel>
                    <ListBox
                        Name="RecentDiffFilesListBox"
                        Margin="0,8,0,0"
                        FontSize="14"
                        KeyDown="RecentDiffFilesListBox_KeyDown"
                        MouseDoubleClick="RecentDiffFilesListBox_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="12" Text="{Binding Item1}" />
                                    <Separator />
                                    <TextBlock FontSize="12" Text="{Binding Item2}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</UserControl>
