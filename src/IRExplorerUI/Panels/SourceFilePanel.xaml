<local:ToolPanelControl
    x:Class="IRExplorerUI.SourceFilePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:document="clr-namespace:IRExplorerUI.Document"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <local:ToolPanelControl.CommandBindings>
        <!--<CommandBinding Command="local:Command.ClearTextbox" Executed="ExecuteClearTextbox" CanExecute="CommandBinding_CanExecute"/>-->
    </local:ToolPanelControl.CommandBindings>

    <local:ToolPanelControl.Resources>
        <Style x:Key="ColumnsGridSplitterStyle" TargetType="{x:Type ColumnDefinition}">
            <Style.Setters>
                <Setter Property="Width" Value="2" />
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ColumnsVisible}" Value="False">
                    <DataTrigger.Setters>
                        <Setter Property="Width" Value="0" />
                        <Setter Property="MaxWidth" Value="0" />
                    </DataTrigger.Setters>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ColumnsStyle" TargetType="{x:Type ColumnDefinition}">
            <Style.Setters>
                <Setter Property="Width" Value="*" />
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ColumnsVisible}" Value="False">
                    <DataTrigger.Setters>
                        <Setter Property="Width" Value="0" />
                        <Setter Property="MaxWidth" Value="0" />
                    </DataTrigger.Setters>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </local:ToolPanelControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>
            <ToolBarTray
                Grid.Column="0"
                Height="28"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                IsLocked="True">
                <ToolBar
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                    Loaded="ToolBar_Loaded">
                    <Button Click="OpenButton_Click" ToolTip="Open a source file">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="16"
                                Height="16"
                                Margin="0,1,0,0"
                                Source="{StaticResource FolderIcon}" />
                            <TextBlock Text="Open" />
                        </StackPanel>
                    </Button>
                    <Button Click="DefaultButton_Click" ToolTip="Find and open source file using debug info">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="16"
                                Height="16"
                                Margin="0,1,0,0"
                                Source="{StaticResource ReloadIcon}" />
                            <TextBlock Text="Default" />
                        </StackPanel>
                    </Button>
                    <Separator />

                    <Button
                        Click="ButtonBase_OnClick"
                        ToolTip="Jump to hottest source line"
                        Visibility="{Binding HasProfileInfo, Converter={StaticResource BoolToVisibility}}">
                        <Image Source="{StaticResource HotFlameIcon}" />
                    </Button>
                    <Button
                        Padding="1"
                        Command="local:DocumentHostCommand.JumpToNextProfiledElement"
                        CommandTarget="{Binding ElementName=TextView}"
                        ToolTip="Jump to previous bookmark (Shift+F2)">
                        <Image Source="{StaticResource MinusIcon}" Style="{StaticResource DisabledImageStyle}" />
                    </Button>
                    <Button
                        Padding="1"
                        Command="local:DocumentHostCommand.JumpToNextProfiledElement"
                        CommandTarget="{Binding ElementName=TextView}"
                        ToolTip="Jump to previous bookmark (Shift+F2)">
                        <Image Source="{StaticResource PlusIcon}" Style="{StaticResource DisabledImageStyle}" />
                    </Button>
                    <Separator />

                    <TextBlock
                        Margin="0,0,4,0"
                        VerticalAlignment="Center"
                        Text="Inlinees" />
                    <Button
                        Padding="1"
                        Command="local:DocumentHostCommand.JumpToNextProfiledElement"
                        CommandTarget="{Binding ElementName=TextView}"
                        ToolTip="Jump to previous bookmark (Shift+F2)">
                        <Image Source="{StaticResource EyeIcon}" Style="{StaticResource DisabledImageStyle}" />
                    </Button>
                    <ComboBox
                        Name="InlineeCombobox"
                        Width="200"
                        MinWidth="100"
                        MaxWidth="200"
                        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                        DisplayMemberPath="Function"
                        Loaded="ComboBox_Loaded"
                        SelectedValue="Function"
                        SelectionChanged="InlineeCombobox_SelectionChanged"
                        ToolTip="Inlined functions call stack" />
                    <Button Click="Button_Click_1" ToolTip="Switch to callee">
                        <Image Source="{StaticResource LeftArrowIcon}" />
                    </Button>
                    <Button Click="Button_Click_2" ToolTip="Switch to caller">
                        <Image Source="{StaticResource RightArrowIcon}" />
                    </Button>
                    <TextBlock
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Text="0/0" />
                </ToolBar>
            </ToolBarTray>
            <local:PanelToolbarTray
                Grid.Column="1"
                HasDuplicateButton="False"
                HasPinButton="False" />
        </Grid>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Style="{StaticResource ColumnsGridSplitterStyle}" />
                <ColumnDefinition Style="{StaticResource ColumnsStyle}" />
            </Grid.ColumnDefinitions>

            <avalonEdit:TextEditor
                xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                x:Name="TextView"
                Grid.Column="0"
                Margin="0,23,0,0"
                Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                FontFamily="Consolas"
                FontSize="12"
                HorizontalScrollBarVisibility="Auto"
                ShowLineNumbers="True"
                SyntaxHighlighting="C++"
                VerticalScrollBarVisibility="Auto" />

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                ResizeBehavior="PreviousAndNext" />

            <document:DocumentColumns Grid.Column="2" HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      x:Name="ProfileColumns"
                                      Padding="-1,0,0,0"/>
        </Grid>
    </Grid>
</local:ToolPanelControl>