<UserControl
    x:Class="IRExplorerUI.Query.ButtonQueryViewElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI.Query"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="24"
    d:DesignHeight="50"
    d:DesignWidth="200"
    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=HasBoldText}" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=HasDemiBoldText}" Value="True">
                    <Setter Property="FontWeight" Value="DemiBold" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Button
        Height="20"
        MinWidth="20"
        Margin="2,0,2,0"
        Padding="4,0,4,0"
        VerticalAlignment="Center"
        Click="Button_Click"
        Content="{Binding Text}"
        IsEnabled="{Binding IsEnabled}"
        Style="{StaticResource ButtonStyle}"
        ToolTip="{Binding Description}" />
</UserControl>