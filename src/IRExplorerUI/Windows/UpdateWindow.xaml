<Window
    Height="500"
    Loaded="Window_Loaded"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    SnapsToDevicePixels="True"
    Title="IR Explorer Update"
    Width="600"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d"
    x:Class="IRExplorerUI.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <StackPanel Margin="0,8,0,0" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="13"
                        Margin="8,4,0,0"
                        Text="Available version: " />
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="8,4,0,0"
                        Text="0.0.0"
                        x:Name="NewVersionLabel" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        FontSize="13"
                        Margin="8,2,0,0"
                        Text="Current version: " />
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="16,2,0,0"
                        Text="0.0.0"
                        x:Name="CurrentVersionLabel" />
                </StackPanel>

                <TextBlock
                    FontSize="14"
                    FontWeight="Medium"
                    Margin="8,8,0,8"
                    Text="Release notes" />
            </StackPanel>
            <Image
                DockPanel.Dock="Right"
                HorizontalAlignment="Right"
                Margin="0,4,8,0"
                Source="/refresh.png" />

        </DockPanel>
        <WebBrowser
            Grid.Row="1"
            Margin="0,8,0,4"
            x:Name="Browser" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="0,4,8,4"
            Orientation="Horizontal">
            <Button
                Click="CancelButton_Click"
                Content="Cancel"
                Margin="0,0,4,0"
                Padding="4,1,4,1"
                x:Name="CancelButton" />
            <Button
                Background="#FFAFEABF"
                Click="UpdateButton_Click"
                Content="Install Update"
                Padding="4,1,4,1"
                x:Name="UpdateButton" />
        </StackPanel>
    </Grid>
</Window>