<Window
    x:Class="IRExplorerUI.ProfileLoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:IRExplorerUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Select profile files"
    Width="500"
    Height="Auto"
    MinWidth="400"
    ResizeMode="CanResizeWithGrip"
    ShowInTaskbar="False"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="38" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <TextBlock Margin="16,8,16,0" Text="Profile data file" />
            <Grid Margin="16,4,16,0">
                <controls:FileSystemTextBox
                    x:Name="ProfileAutocompleteBox"
                    Height="22"
                    Margin="0,0,55,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    FilterMode="StartsWithOrdinal"
                    IsDropDownOpen="True"
                    IsEnabled="{Binding InputControlsEnabled}"
                    IsTextCompletionEnabled="False"
                    MinimumPrefixLength="1"
                    TabIndex="1"
                    Text="{Binding Path=ProfileFilePath, Mode=TwoWay}" />

                <Button
                    x:Name="BaseBrowseButton"
                    Height="22"
                    Padding="2,2,2,2"
                    HorizontalAlignment="Right"
                    Click="ProfileBrowseButton_Click"
                    Content="Browse..."
                    IsEnabled="{Binding InputControlsEnabled}"
                    TabIndex="9" />
            </Grid>

            <TextBlock Margin="16,4,16,0" Text="Binary file (main image)" />
            <Grid Margin="16,4,16,0">
                <controls:FileSystemTextBox
                    x:Name="BinaryAutocompleteBox"
                    Height="22"
                    Margin="0,0,55,0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    FilterMode="StartsWithOrdinal"
                    IsDropDownOpen="True"
                    IsEnabled="{Binding InputControlsEnabled}"
                    IsTextCompletionEnabled="False"
                    MinimumPrefixLength="1"
                    TabIndex="2"
                    TextChanged="BinaryAutocompleteBox_OnTextChanged"
                    Text="{Binding Path=BinaryFilePath, Mode=TwoWay}" />

                <Button
                    x:Name="DiffBrowseButton"
                    Height="22"
                    Padding="2,2,2,2"
                    HorizontalAlignment="Right"
                    Click="BinaryBrowseButton_Click"
                    Content="Browse..."
                    IsEnabled="{Binding InputControlsEnabled}"
                    TabIndex="10" />
            </Grid>


            <Expander
                Margin="16,8,16,0"
                IsExpanded="True"
                Visibility="{Binding InDiffMode, Converter={StaticResource BoolToVisibility}}">
                <Expander.Header>
                    <TextBlock FontWeight="DemiBold" Text="Symbol source options" />
                </Expander.Header>

                <StackPanel>
                    <CheckBox
                        Margin="0,8,0,0"
                        Content="Use default Symbol Server"
                        IsChecked="{Binding Path=SymbolOptions.UseDefaultSymbolSource, Mode=TwoWay}"
                        ToolTip="https://msdl.microsoft.com/download/symbols" />
                    <CheckBox
                        Margin="0,4,0,0"
                        Content="Cache symbol files"
                        IsChecked="{Binding Path=SymbolOptions.UseSymbolCache, Mode=TwoWay}"
                        IsEnabled="False"
                        ToolTip="C:\Symbols" />
                    <TextBlock Margin="0,8,0,0" Text="Optional symbol directories (one per line)" />
                    <Grid Margin="0,4,0,0">
                        <TextBox
                            x:Name="SymbolAutocompleteBox"
                            MinHeight="44"
                            Margin="0,0,55,0"
                            HorizontalAlignment="Stretch"
                            AcceptsReturn="True"
                            Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            IsEnabled="{Binding InputControlsEnabled}"
                            TabIndex="2"
                            Text="{Binding Path=SymbolOptions.SymbolSearchPaths, Mode=TwoWay, Converter={StaticResource StringListConverter}}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </Expander>

            <Expander
                Margin="16,8,16,8"
                IsExpanded="True"
                Visibility="{Binding InDiffMode, Converter={StaticResource BoolToVisibility}}">
                <Expander.Header>
                    <TextBlock FontWeight="DemiBold" Text="Binary options" />
                </Expander.Header>

                <StackPanel>
                    <TextBlock Margin="0,8,0,0" Text="Optional binary directories (one per line)" />
                    <Grid Margin="0,4,0,0">
                        <TextBox
                            MinHeight="44"
                            Margin="0,0,55,0"
                            HorizontalAlignment="Stretch"
                            AcceptsReturn="True"
                            Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            IsEnabled="{Binding InputControlsEnabled}"
                            TabIndex="2"
                            Text="{Binding Path=Options.BinarySearchPaths, Mode=TwoWay, Converter={StaticResource StringListConverter}}"
                            TextWrapping="Wrap" />
                    </Grid>
                    <TextBlock Margin="0,4,0,0" Text="Processed binary whitelist (one per line)" />
                    <Grid Margin="0,4,0,0">
                        <TextBox
                            MinHeight="44"
                            Margin="0,0,55,0"
                            HorizontalAlignment="Stretch"
                            AcceptsReturn="True"
                            Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                            BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                            IsEnabled="{Binding InputControlsEnabled}"
                            TabIndex="2"
                            Text="{Binding Path=Options.BinaryNameWhitelist, Mode=TwoWay, Converter={StaticResource StringListConverter}}"
                            TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </Expander>
        </StackPanel>


        <StackPanel
            Grid.Row="1"
            Width="250"
            Margin="16,4,0,8"
            HorizontalAlignment="Left">
            <Button
                x:Name="RecentButton"
                Width="80"
                Height="24"
                Padding="4,1,4,1"
                HorizontalAlignment="Left"
                Click="RecentButton_Click"
                Content="Recent Files"
                Visibility="{Binding IsLoadingProfile, Converter={StaticResource InvertedBoolToVisibility}}">
                <Button.ContextMenu>
                    <ContextMenu />
                </Button.ContextMenu>
            </Button>
            <ProgressBar
                x:Name="LoadProgressBar"
                Height="4"
                HorizontalAlignment="Stretch"
                Maximum="100"
                Visibility="{Binding IsLoadingProfile, Converter={StaticResource BoolToVisibility}}"
                Value="40" />
            <DockPanel Visibility="{Binding IsLoadingProfile, Converter={StaticResource BoolToVisibility}}">
                <TextBlock
                    x:Name="LoadProgressLabel"
                    DockPanel.Dock="Left"
                    Text="" />
                <TextBlock
                    x:Name="ProgressPercentLabel"
                    HorizontalAlignment="Right"
                    DockPanel.Dock="Right"
                    Text="0 %" />
            </DockPanel>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Margin="0,4,16,8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="CancelButton"
                Height="24"
                Margin="0,0,4,0"
                Padding="4,1,4,1"
                VerticalAlignment="Top"
                Click="CancelButton_Click"
                Content="Cancel"
                IsCancel="True"
                TabIndex="4" />
            <Button
                x:Name="LoadButton"
                Height="24"
                Padding="4,1,4,1"
                VerticalAlignment="Top"
                Background="#FFFCF4CC"
                Click="LoadButton_Click"
                Content="Load Profile"
                IsEnabled="{Binding InputControlsEnabled}"
                TabIndex="3" />
        </StackPanel>
    </Grid>
</Window>