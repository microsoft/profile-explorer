<Window
    x:Class="IRExplorerUI.ProfileLoadWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:IRExplorerUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IRExplorerUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Select profile files"
    Width="600"
    Height="250"
    Loaded="Window_Loaded"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <TextBlock Margin="16,16,16,0" Text="Profile data file" />
            <Grid Margin="16,4,16,0">
                <controls:FileSystemTextBox
                    x:Name="ProfileAutocompleteBox"
                    Height="22"
                    Margin="0,0,55,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    FilterMode="StartsWithOrdinal"
                    IsDropDownOpen="True"
                    IsTextCompletionEnabled="False"
                    MinimumPrefixLength="1"
                    TabIndex="1" />

                <Button
                    x:Name="BaseBrowseButton"
                    Height="22"
                    Padding="2,2,2,2"
                    HorizontalAlignment="Right"
                    Click="BaseBrowseButton_Click"
                    Content="Browse..."
                    TabIndex="9" />
            </Grid>

            <TextBlock Margin="16,4,16,0" Text="Binary file (image)" />
            <Grid Margin="16,4,16,0">
                <controls:FileSystemTextBox
                    x:Name="BinaryAutocompleteBox"
                    Height="22"
                    Margin="0,0,55,0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    FilterMode="StartsWithOrdinal"
                    IsDropDownOpen="True"
                    IsTextCompletionEnabled="False"
                    MinimumPrefixLength="1"
                    TabIndex="2" />

                <Button
                    x:Name="DiffBrowseButton"
                    Height="22"
                    Padding="2,2,2,2"
                    HorizontalAlignment="Right"
                    Click="DiffBrowseButton_Click"
                    Content="Browse..."
                    TabIndex="10" />
            </Grid>

            <TextBlock Margin="16,4,16,0" Text="Debug info file" />
            <Grid Margin="16,4,16,0">
                <controls:FileSystemTextBox
                    x:Name="DebugAutocompleteBox"
                    Height="22"
                    Margin="0,0,55,0"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    FilterMode="StartsWithOrdinal"
                    IsDropDownOpen="True"
                    IsTextCompletionEnabled="False"
                    MinimumPrefixLength="1"
                    TabIndex="2" />

                <Button
                    x:Name="DebugBrowseButton"
                    Height="22"
                    Padding="2,2,2,2"
                    HorizontalAlignment="Right"
                    Click="DebugBrowseButton_OnClick"
                    Content="Browse..."
                    TabIndex="10" />
            </Grid>
        </StackPanel>


        <StackPanel
            x:Name="LoadProgressPanel"
            Grid.Row="1"
            Grid.Column="0"
            Width="200"
            Margin="16,4,0,8"
            HorizontalAlignment="Left"
            Visibility="Hidden">
            <ProgressBar
                x:Name="LoadProgressBar"
                Width="200"
                Height="20"
                Maximum="100"
                Value="40" />
            <TextBlock x:Name="LoadProgressLabel" Text="100%" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,4,16,16"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="CancelButton"
                Height="24"
                Margin="0,0,4,0"
                Padding="4,1,4,1"
                VerticalAlignment="Top"
                Click="CancelButton_Click"
                Content="Cancel"
                TabIndex="4" />
            <Button
                x:Name="UpdateButton"
                Height="24"
                Padding="4,1,4,1"
                VerticalAlignment="Top"
                Background="#FFFCF4CC"
                Click="UpdateButton_Click"
                Content="Load Profile"
                TabIndex="3" />
        </StackPanel>
    </Grid>
</Window>